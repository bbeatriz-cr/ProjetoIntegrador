        </div>
        <!-- Formato das unhas -->
        <div class="border p-3 mb-4">
            <h5>Formato das Unhas</h5>
            <form class="row g-3">
                <div class="col-md-6">
                    <label for="formato_unha" class="form-label">Formato Unhas</label>
                    <select class="form-select" id="formato_unha">
                        <option selected>Escolha...</option>
                        <option> A-Normal</option>
                        <option> B-Involuta</option>
                        <option> C-Telha</option>
                        <option> D-Funil</option>
                        <option> E-Gancho</option>
                        <option> F-Torquês</option>
                        <option> G-Caracol</option>
                        <option> H-Cunha</option>
                    </select>
                </div>
                <!-- Artelhos  -->
