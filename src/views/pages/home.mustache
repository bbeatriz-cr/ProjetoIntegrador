                        <label class="form-check-label" for="hipotiroidismo">Hipotiroidismo</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="hipertensao">
                        <label class="form-check-label" for="hipertensao">Hipertensão</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="hipotensao">
                        <label class="form-check-label" for="hipotensao">Hipotensão</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="renal">
                        <label class="form-check-label" for="renal">Renal</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="neuropatia">
                        <label class="form-check-label" for="neuropatia">Neuropatia</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="reumatismo">
                        <label class="form-check-label" for="reumatismo">Reumatismo</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="alt_comprometimento">
                        <label class="form-check-label" for="alt_comprometimento">Alteração ou Comprometimento
                            Vasculares</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="epilepsia">
                        <label class="form-check-label" for="epilepsia">Epilepsia</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="hepatite">
                        <label class="form-check-label" for="hepatite">Hepatite</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="hanseniase">
                        <label class="form-check-label" for="hanseniase">Hanseniase</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="quimioterapia">
                        <label class="form-check-label" for="quimioterapia">Quimioterapia / Radioterapia</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="antecedentes">
                        <label class="form-check-label" for="antecedentes">Antecedentes Oncológicos</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="cirurgia_mmii">
                        <label class="form-check-label" for="cirurgia_mmii">Cirurgia MMII</label>
                    </div>
                </div>
            </form>
            <div class="col-md-6">
                <label for="diabetes" class="form-label">Diabetes:</label>
                <select class="form-select" id="diabetes">
                    <option selected>Escolha...</option>
                    <option>Sim</option>
                    <option>Não</option>
                </select>
                <label for="taxa_glicemica" class="form-label">Taxa Glicêmica:</label>
                <input type="text" class="form-control" id="taxa_glicemica" placeholder="Digite taxa a glicêmica">
                <label for="data-ultima" class="form-label">Data da última verificação:</label>
                <input type="date" class="form-control" id="data-ultima">
                </select>
            </div>
            <div class="col-md-6">
                <label for="insulina" class="form-label">Insulina:</label>
                <select class="form-select" id="insulina">
                    <option selected>Escolha...</option>
                    <option>Sim</option>
                    <option>Não</option>
                    <option>Injetável</option>
                    <option>Via Oral</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="dieta_hidrica" class="form-label">Dieta Hídrica:</label>
                <select class="form-select" id="dieta_hidrica">
                    <option selected>Escolha...</option>
                    <option>Sim</option>
                    <option>Não</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="dieta_alimentar" class="form-label">Dieta alimentar:</label>
                <select class="form-select" id="dieta_alimentar">
                    <option selected>Escolha...</option>
                    <option>Sim</option>
                    <option>Não</option>
                </select>
            </div>
        </div>
        <!-- Alterações e Lesões dos Pés -->
        <div class="border p-3 mb-4">
            <h5>Alterações e Lesões dos Pés</h5>
            <form class="row g-3">
                <div class="col-md-6">
                    <label for="tipo-pisada" class="form-label">Tipo de Pisada</label>
                    <select class="form-select" id="tipo-pisada">
                        <option selected>Escolha...</option>
                        <option>Cavo / Supinado</option>
                        <option>Normal / Neutro</option>
                        <option>Plano / Pronado</option>
                    </select>
                    
                </div>
                <div class="col-md-6">
                    <label for="marcha" class="form-label">Tipo de Marcha</label>
                    <select class="form-select" id="marcha">
                        <option selected>Escolha...</option>
                        <option>Normal</option>
                        <option>Patólogica</option>
                        <input type="text" class="form-control" id="marcha" placeholder="Qual Patólogia?">
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="joelho" class="form-label">Joelho:</label>
                    <select class="form-select" id="joelho">
                        <option selected>Escolha...</option>
                        <option>Normal</option>
                        <option>Valgo</option>
                        <option>Varo</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="articulacao" class="form-label">Articulação:</label>
                    <select class="form-select" id="articulacao">
                        <option selected>Escolha...</option>
                        <option>Retropé</option>
                        <option>Chopart</option>
                        <option>Mediopé</option>
                        <option>Lisfranc</option>
                        <option>Antepé</option>
                    </select>
                </div>
                <div class="col-md-6">
